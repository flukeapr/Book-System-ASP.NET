@model Project13_web.Models.ReviewViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <style>

        body {
            margin: 50px;
        }

        .topic {
            display: flex;
            justify-content: center;
            margin: 20px;
        }

            .topic h1 {
                font-weight: bold;
            }

        .book {
            display: grid;
            grid-template-columns: 1.5fr 1.5fr;
        }

        .image {
            display: flex;
            justify-content: center;
        }

        .detail h3 {
            color: #82AC26;
            margin-left: 5px;
        }

        .cap {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        button {
            margin-top: 10px;
        }

        .test {
            width: 200px;
            height: 70px;
            border: 2px solid #336359;
            border-radius: 30px;
            text-align: center;
        }

            .test h2 {
                text-align: center;
                color: #19B86C;
                background-color: transparent;
            }

        .buy {
            width: 300px;
            height: 70px;
            border: 2px solid #1E1E1E;
            border-radius: 30px;
            text-align: center;
            background-color: #F7CD81;
        }

            .buy h2 {
                text-align: center;
                color: black;
            }

        .sort-story {
            margin: 30px;
            overflow: hidden;
            display: flex;
            justify-content: center;
        }

        .review {
            border: 1px solid #808080;
            height: 400px;
        }

        .title-review {
            display: flex;
            justify-content: center;
            border-bottom:1px solid #808080;
        }

        .review-detail {
            display: flex;
            justify-content: center;
        }

        .footer-review {
            display: flex;
            justify-content: center;
        }

        .sent-review {
            width: 200px;
            height: 50px;
            border-radius: 10px;
            background-color: #D1C4A2;
            border: none;
        }

        .star svg:hover {
            fill: yellow;
        }


        .rating-container {
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-pack: justify;
            -ms-flex-pack: justify;
            justify-content: center;
            width: 100%;
        }

        .rating-text p {
            color: rgba(0, 0, 16, 0.8);
            font-size: 1.3rem;
            padding: 0.3rem;
        }

        .rating {
            background-color: rgba(0, 0, 16, 0.8);
            padding: 0.4rem 0.4rem 0.1rem 0.4rem;
            border-radius: 2.2rem;
            margin: 20px;
        }

        .rating-form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        svg {
            fill: rgb(242, 242, 242);
            height: 3.6rem;
            width: 3.6rem;
            margin: 0.2rem;
        }

        .rating-form-2 svg {
            height: 3rem;
            width: 3rem;
        }

        #radios label {
            position: relative;
        }

        input[type="radio"] {
            position: absolute;
            opacity: 0;
        }

            input[type="radio"] + svg {
                -webkit-transition: all 0.2s;
                transition: all 0.2s;
            }

        input + svg {
            cursor: pointer;
        }

        input[class="super-happy"]:hover + svg,
        input[class="super-happy"]:checked + svg,
        input[class="super-happy"]:focus + svg {
            fill: rgb(0, 109, 217);
        }

        input[class="happy"]:hover + svg,
        input[class="happy"]:checked + svg,
        input[class="happy"]:focus + svg {
            fill: rgb(0, 204, 79);
        }

        input[class="neutral"]:hover + svg,
        input[class="neutral"]:checked + svg,
        input[class="neutral"]:focus + svg {
            fill: rgb(232, 214, 0);
        }

        input[class="sad"]:hover + svg,
        input[class="sad"]:checked + svg,
        input[class="sad"]:focus + svg {
            fill: rgb(229, 132, 0);
        }

        input[class="super-sad"]:hover + svg,
        input[class="super-sad"]:checked + svg,
        input[class="super-sad"]:focus + svg {
            fill: rgb(239, 42, 16);
        }

        .rate {
            display: flex;
            justify-content: center;
            margin: 20px;
        }

        .rate-radio {
            width: 200px;
            height: 60px;
            background-color: #5B584F;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 10px;
        }

            .rate-radio label {
                margin-bottom: -5px;
            }


         .is-review{
             height:200px;
             border:1px solid #808080;
             margin:20px;
         }
         .creatat{
             display:flex;
             justify-content:end;
             align-items:end;
         }
    </style>
</head>
<body>
    <div class="topic">
        <h1>@Model.books.Book_Name</h1>
    </div>

    <div class="container">

        <div class="book">

            <div class="image">
                <img src=@Url.Content("~/Content/Book_Image/"+(Model.books.Image)) style="width:380px;height: auto" />
            </div>
            <div class="detail">
                <div class="cap">
                    <h2>ประเภทหนังสือ</h2>
                    <h3> @Model.books.Category</h3>
                </div>

                <div class="cap">
                    <h2>ผู้เขียน</h2>
                    <h3>@Model.books.Author</h3>
                </div>
                <div class="cap">
                    <h2>สำนักพิมพ์</h2>
                    <h3>@Model.books.Publisher</h3>
                </div>



                <button class="buy" onclick="location.href='@Url.Action("AddToCart", "Cart", new { bookID = Model.books.Book_Id })'"><h2>ซื้อ @Model.books.Price บาท</h2></button>

            </div>

        </div>
        <div class="sort-story">
            <label>@Model.books.Short_Story</label>

        </div>
    </div>
    @using (Html.BeginForm("SaveReview", "Home", FormMethod.Post))
    {
        @Html.Hidden("bookId", Model.books.Book_Id)
